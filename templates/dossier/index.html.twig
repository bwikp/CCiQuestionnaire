{% extends 'base.html.twig' %}

{% block title %}Dossier index
{% endblock %}

{% block body %}
	<h1>Dossier index</h1>
	<div class="container">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Email</th>
					<th>ville</th>
					<th>annee</th>
					<th>Date de recrutement</th>
					<th>Formation</th>
					<th>Promotion</th>

					<th>actions</th>

				</tr>
			</thead>
			<tbody>
				{% for dossier in dossiers %}
					<tr>
						<td>{{ dossier.id }}</td>
						<td>{{dossier.candidat.nom}}</td>
						<td>{{dossier.candidat.prenom}}</td>
						{# <td>{{dossier.candidat.mail}}</td> #}
						<td>{{dossier.getPromosFormation.formation.ville}}</td>
						<td>{{dossier.getPromosFormation.formation.annee}}</td>
						<td>date</td>
						<td>{{ dossier.getPromosFormation.formation.nom}}</td>
						<td>{{dossier.getPromosFormation.promotion.nom}}</td>
						<td>
							<a href="{{ path('app_dossier_show', {'id': dossier.id}) }}">oeil</a>
							<a href="{{ path('app_dossier_edit', {'id': dossier.id}) }}">crayon</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


		<a href="{{ path('app_dossier_new') }}">Create new</a>
	</div>
{% endblock %}
