<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id thematique</th>
                <th>Detail</th>
                <th>Image</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.id }}</td>
                <td>{{ question.detail }}</td>
                <td>{{ question.image }}</td>
                <td>{{ question.note }}</td>
                <td>
