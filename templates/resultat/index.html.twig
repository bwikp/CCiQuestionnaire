{% extends 'base.html.twig' %}

{% block title %}Resultat index
{% endblock %}

{% block body %}
	<div class="container">
		<div>
			<h3>Filtre</h3>
			<div>
				{{form_start(form, {attr: {class: 'filtre'}})}}
				{{form_row(form.q)}}
				<h4>Promotions</h4>
				{{form_row(form.promos)}}
				<h4>Formations</h4>
				{{form_row(form.formation)}}
				{{form_end(form)}}
				<button type="submit" class="btn btn-primary w-25">Filtrer</button>
			</div>
		</div>
		<div>
			<h1>Resultat index</h1>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>nom candidat</th>
						<th>prenom candidat</th>
						<th>thematique1</th>
						<th>thematique2</th>
						<th>thematique3</th>
						<th>thematique4</th>
						<th>thematique5</th>
						<th>formation</th>
						<th>promo</th>
						<th>Annee</th>
						<th>Score_final</th>
						<th>Is_admis</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>

					{% for resultat in resultats %}
						<tr>
							<td>{{ resultat.id }}</td>
							<td>{{resultat.Dossier.candidat.nom}}</td>
							<td>{{resultat.Dossier.candidat.prenom}}</td>
							<td>{{ resultat.thematique1}}</td>
							<td>{{ resultat.thematique2}}</td>
							<td>{{ resultat.thematique3}}</td>
							<td>{{ resultat.thematique4}}</td>
							<td>{{ resultat.thematique5}}</td>
							<td>{{resultat.Dossier.PromosFormation.formation}}</td>
							<td>{{resultat.Dossier.PromosFormation.promotion}}</td>
							<td>{{resultat.Dossier.PromosFormation.formation.Annee}}</td>

							<td>{{ resultat.scoreFinal }}</td>
							<td>{{ resultat.isAdmis ? 'Yes' : 'No' }}</td>
							<td>
								<a href="{{ path('app_resultat_show', {'id': resultat.id}) }}">show</a>
								<a href="{{ path('app_resultat_edit', {'id': resultat.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a href="{{ path('app_resultat_new') }}">Create new</a>
		</div>
	</div>
{% endblock %}
